<plugin>
   <extension
         point="org.eclipse.core.filesystem.filesystems">
      <filesystem
            scheme="xobot">
         <run
               class="org.pgcase.xobot.workspace.filesystem.XobotFileSystem">
         </run>
      </filesystem>
   </extension>
   <extension
         id="xobot"
         name="%modelProvider.xobot.name"
         point="org.eclipse.core.resources.modelProviders">
      <modelProvider
            class="org.pgcase.xobot.workspace.resources.mappings.XobotModelProvider">
      </modelProvider>
      <extends-model
            id="org.eclipse.core.resources.modelProvider">
      </extends-model>
      <enablement>
          <test property="org.eclipse.core.resources.projectNature" value="org.pgcase.xobot.workspace.resources.xobot" />
      </enablement>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.pgcase.xobot.workspace.runtime.XProjectDescriptor"
            class="org.pgcase.xobot.workspace.internal.resources.Xobot2ResourceAdapterFactory">
         <adapter
               type="org.eclipse.core.resources.IProject">
         </adapter>
      </factory>
      <factory
            adaptableType="org.eclipse.core.resources.IProject"
            class="org.pgcase.xobot.workspace.internal.resources.Resource2XobotAdapterFactory">
         <adapter
               type="org.pgcase.xobot.workspace.runtime.XProjectDescriptor">
         </adapter>
      </factory>
   </extension>
   <extension
         id="xobot"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.pgcase.xobot.workspace.resources.XobotProjectNature">
         </run>
      </runtime>
   </extension>

</plugin>
