<plugin>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.pgcase.xobot.landscape.ui.navigator.SourcesContentProvider"
            icon="platform:/plugin/org.pgcase.xobot.e3/images/xobot16.png"
            id="org.pgcase.xobot.basis.ui.navigator.navigatorContent.sources"
            labelProvider="org.pgcase.xobot.basis.ui.navigator.RegistryLabelProvider"
            name="%navigatorContent.sources.name">
         <triggerPoints>
            <adapt
                  type="org.eclipse.core.resources.IProject">
            </adapt>
         </triggerPoints>
      </navigatorContent>
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.pgcase.xobot.landscape.ui.navigator.TargetsContentProvider"
            icon="platform:/plugin/org.pgcase.xobot.e3/images/xobot16.png"
            id="org.pgcase.xobot.basis.ui.navigator.navigatorContent.targets"
            labelProvider="org.pgcase.xobot.basis.ui.navigator.RegistryLabelProvider"
            name="%navigatorContent.targets.name">
         <triggerPoints>
            <adapt
                  type="org.eclipse.core.resources.IProject">
            </adapt>
         </triggerPoints>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="org.pgcase.xobot.basis.ui.navigator.navigatorContent.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>

</plugin>
